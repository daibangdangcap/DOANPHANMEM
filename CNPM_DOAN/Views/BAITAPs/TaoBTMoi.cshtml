@model CNPM_DOAN.Models.BAITAP

<link rel="stylesheet" href="~/Content/bootstrap.min.css" />
<script src="~/Scripts/bootstrap.min.js"></script>
<div class="modal-dialog" style="top:30%">
    <div class="modal-content">
        <div class="modal-header">
            <h4 class="modal-title" id="myModal-label">@CNPM_DOAN.Resources.Language.Thêm_tài_liệu_học_tập_mới</h4>
        </div>
        <div class="modal-body">

            @using (Html.BeginForm("TaoBTMoi", "BAITAPs", FormMethod.Post, new { enctype = "multipart/form-data" }))
            {
                <label>@CNPM_DOAN.Resources.Language.Tên_file: </label>
                <input type="file" name="bt" required>
                <br /><br />
                <label>@CNPM_DOAN.Resources.Language.Hạn_nộp: </label>
                <input type="date" name="hanchot" required>
                <input type="hidden" name="idnguoitao" value="@Session["IDUSER"]" />
                <input type="hidden" name="idnguoinhan" value="@Session["IDNGUOINHAN"]" />
                <hr />
                <input type="submit" value="@CNPM_DOAN.Resources.Language.Xác_nhận">
            }
        </div>
    </div>
</div>