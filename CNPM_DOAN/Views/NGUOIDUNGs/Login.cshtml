@model CNPM_DOAN.Models.Login

<div class="login" id="login">
    <h1>Đăng nhập</h1>
    <section>
        <form action="/NGUOIDUNGs/Login" method="post">
            @Html.AntiForgeryToken()
            <div class="txt-field " style="margin-bottom: 50px; margin-top : 30px" >
                <input type="text" name="username" class="input-change" required oninvalid="this.setCustomValidity('Tên tài khoản không được rỗng')">
                <span></span>
                <label>Tên đăng nhập</label>
            </div>
            <div class="txt-field" style="margin-bottom:45px">
                <input type="password"  name="password" class="input-change" required oninvalid="this.setCustomValidity('Mật khẩu không được rỗng')">
                <span></span>
                <label>Mật khẩu</label>
            </div>
                <button type="submit" class="buttonLogin"><span>Đăng nhập</span></button>
        </form>
    </section>
</div>