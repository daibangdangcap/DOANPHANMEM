
@model CNPM_DOAN.Models.NGUOIDUNG

@{
    ViewBag.Title = "ViewConUpdateInfo";
    Layout = null;
}
<body>
    <form class="p-viewsuamk" action="/NGUOIDUNGs/ViewConUpdateInfo?id=@Session["IDUSER"]" method="post">
            <h1 class="mb-4">@CNPM_DOAN.Resources.Language.Chỉnh_sửa_thông_tin_cá_nhân</h1>
            <div class="mb-3">
                <p>@CNPM_DOAN.Resources.Language.Họ_và_tên:</p>
                <input class="input-change-mk" type="text" name="TenNguoiDung" value="@Model.TenNguoiDung">
                <input type="hidden" value="@Session["IDUSER"]" name="id" />
                <p>

                </p>
            </div>
            <div class="mb-3">
                <p>@CNPM_DOAN.Resources.Language.Email:</p>
                <input class="input-change-mk" type="email" name="Email" value="@Model.Email">
                <p>

                </p>
            </div>
            <div class="mb-3">
                <p>@CNPM_DOAN.Resources.Language.Ngày_sinh:</p>
                <input class="input-change-mk" type="date" name="NgaySinh" value="@Model.NgaySinh">
                <p></p>
            </div>
            <div class="d-flex mb-3">
                <p>@CNPM_DOAN.Resources.Language.Giới_tính: </p>
                <div class="col-6 d-flex">
                    <div class="col-6 text-center">
                        <input class="radio-button"
                               type="radio"
                               name="GioiTinh"
                               value="Nam"
                               required />
                        <span class="span-change">Nam</span>
                    </div>
                    <div class="col-6 text-center">
                        <input class="radio-button"
                               type="radio"
                               name="GioiTinh"
                               value="Nữ"
                               required />
                        <span class="span-change">Nữ</span><br />
                    </div>
                    <p></p>
                </div>
            </div>
            <div class="button align-items-center justify-content-center d-flex">
                <input class="btn btn-success" type="submit" value="Lưu" style="width: 30%; height: 50px; font-size:25px;">

            </div>
    </form>
</body>



