<link rel="stylesheet" href="~/Content/bootstrap.min.css" />
<script src="~/Scripts/bootstrap.min.js"></script>
<div class="modal-dialog" style="top:30%">
    <div class="modal-content">
        <div class="modal-header">
            <h4 class="modal-title" id="myModal-label">Tạo tài liệu mới</h4>
        </div>
            <div class="modal-body">

                @using (Html.BeginForm("createNewTaiLieu", "TAILIEUx", FormMethod.Post, new { enctype = "multipart/form-data" }))
                {
                    <label>Chọn tài liệu:</label>
                    <input type="file" id="fileTaiLieu" name="fileTaiLieu" required />
                    <input type="hidden" name="idnguoinhan" value="@Session["HOCSINH"]" />
                    <button type="submit" class="btn btn-success" style="margin-top:20px; margin-left:40%;">Xác nhận</button>
                }
            </div>
    </div>
</div>




