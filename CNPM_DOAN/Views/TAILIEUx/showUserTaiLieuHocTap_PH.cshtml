@model IEnumerable<CNPM_DOAN.Models.NGUOIDUNG>

@{
    ViewBag.Title = "showUserTaiLieuHocTap_PH";
}
<link rel="stylesheet" href="~/MyCss/nhomhoctap.css" />
<body>
    <div class="content">
        <h1>@CNPM_DOAN.Resources.Language.Danh_sách_học_sinh</h1>
        <div class="content-group">
            @foreach (var item in Model)
            {
                <div class="content-group-item" onclick="location.href='@Url.Action("showTaiLieuHocTap_PH", "TAILIEUx", new { idhocsinh=item.IDNguoiDung })'">
                    <div class="content-group-item-name">
                        <p>@item.TenNguoiDung</p>
                    </div>
                </div>
            }
        </div>
    </div>
</body>
